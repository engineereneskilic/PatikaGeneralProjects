@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-5">
    <h1 class="text-center mb-5 card">Library Management System</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title card">Manage Authors</h5>
                    <p class="card-text">Add, update, or delete authors in the system.</p>
                    <a href="/Author/Index" class="btn btn-primary">Go to Authors</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mt-4 mt-md-0">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Manage Books</h5>
                    <p class="card-text">Add, update, or delete books in the system.</p>
                    <a href="/Book/Index" class="btn btn-primary">Go to Books</a>
                </div>
            </div>
        </div>
    </div>
</div>