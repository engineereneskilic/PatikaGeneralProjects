@model MiniLibraryManagementSystem.Models.BookViewModel
@{
    ViewData["Title"] = "Edit";
}

<h2 class="text-center mb-4">Edit Book</h2>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" method="post" class="p-4 border rounded shadow">
                <input type="hidden" asp-for="BookID" />

                <!-- Title -->
                <div class="form-group mb-3">
                    <label asp-for="Title" class="form-label">Title</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <!-- Author -->
                <div class="form-group mb-3">
                    <label asp-for="AuthorId" class="form-label">Author</label>
                    <select asp-for="AuthorId" asp-items="Model.Authors" class="form-control">
                    </select>
                    <span asp-validation-for="AuthorId" class="text-danger"></span>
                </div>

                <!-- Genre -->
                <div class="form-group mb-3">
                    <label asp-for="Genre" class="form-label">Genre</label>
                    <input asp-for="Genre" class="form-control" />
                    <span asp-validation-for="Genre" class="text-danger"></span>
                </div>

                <!-- Publish Date -->
                <div class="form-group mb-3">
                    <label asp-for="PublishDate" class="form-label">Publish Date</label>
                    <input asp-for="PublishDate" class="form-control" type="date" />
                    <span asp-validation-for="PublishDate" class="text-danger"></span>
                </div>

                <!-- ISBN -->
                <div class="form-group mb-3">
                    <label asp-for="ISBN" class="form-label">ISBN</label>
                    <input asp-for="ISBN" class="form-control" />
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>

                <!-- Copies Available -->
                <div class="form-group mb-3">
                    <label asp-for="CopiesAvailable" class="form-label">Copies Available</label>
                    <input asp-for="CopiesAvailable" class="form-control" type="number" />
                    <span asp-validation-for="CopiesAvailable" class="text-danger"></span>
                </div>

                <!-- Buttons -->
                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success">Save</button>
                    <a asp-action="Index" class="btn btn-secondary">Back</a>
                </div>
            </form>

        </div>
    </div>
</div>
